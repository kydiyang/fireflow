<?xml version="1.0" encoding="UTF-8"?>
<!-- Export hibernate mapping file to DB schema. -->
<project name="hbm2Db" basedir="." default="schemaexport_4_mysql">
    <property name="src.dir" location="${basedir}/src" />
    <property name="build.dir" location="${basedir}/build/classes" />
    <property name="lib.dir" location="${basedir}/libs" />


    <path  id="hibernate.schemaexport.classpath">
        <path   >
            <fileset dir="${lib.dir}" >
                <include name="**/*.jar" />
            </fileset >
            <pathelement path="${build.dir}" />       
        </path>
    </path>

    
    <target name="schemaexport_4_mysql" >

        <taskdef  name="schemaexport"  
            classpathref="hibernate.schemaexport.classpath"
            classname="org.hibernate.tool.hbm2ddl.SchemaExportTask" 
             >
        </taskdef >

        <schemaexport config="${build.dir}/org/fireflow/engine/persistence/hibernate/fireflow_4_mysql.hibernate.cfg.xml"
        quiet="no"
        text="yes"
        drop="no"
        delimiter=";"
        output="${src.dir}/org/fireflow/engine/persistence/hibernate/schema-export-4-mysql.sql">
            <!--fileset dir="${build.dir}">
                        <include name="**/*.hbm.xml"/>
            </fileset-->
        </schemaexport>
    </target>
    
